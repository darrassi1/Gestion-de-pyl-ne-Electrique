@model GESTELEC.Models.Repos

@{
    ViewBag.Title = "Create";
}

<style>
    .create {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #2c3e50;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        max-width: 400px; /* Adjust the width as per your preference */
        margin: 0 auto; /* Center the container horizontally */
    }

        .create h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .create .form-group {
            margin-bottom: 20px;
        }

        .create label {
            font-weight: bold;
        }

        .create input[type="text"],
        .create input[type="date"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #dddddd;
        }

        .create input[type="submit"] {
            padding: 10px 20px;
            background-color: #1abc9c;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .create input[type="submit"]:hover {
                background-color: #16a085;
            }
</style>
<div class="create">
    <h2>Create</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-group">
            @Html.LabelFor(model => model.ReposId, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.ReposId, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ReposId, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateRepos, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.DateRepos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DateRepos, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MotifRepos, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.MotifRepos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MotifRepos, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CIN, htmlAttributes: new { @class = "control-label" })
            @Html.DropDownList("CIN", null, "-- Select Ouvrier --", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CIN, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
    </div>



