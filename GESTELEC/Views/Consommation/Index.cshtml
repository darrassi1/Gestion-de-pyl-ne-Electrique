@model IEnumerable<GESTELEC.Models.Consommation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table {
        background-color: #f7f7f7;
        border-radius: 5px;
        border: none;
        border-collapse: separate;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        width: 100%;
    }

    th {
        background-color: #34495e;
        color: white;
        font-weight: bold;
        padding: 10px;
        text-align: center;
    }

    td {
        background-color: white;
        color: #34495e;
        padding: 10px;
        text-align: center;
    }

    .btn {
        border: none;
        border-radius: 5px;
        color: white;
        cursor: pointer;
        display: inline-block;
        font-size: 14px;
        font-weight: bold;
        margin: 5px;
        padding: 10px 20px;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .btn-primary {
        background-color: #3498db;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-default {
        background-color: #95a5a6;
    }

        .btn-default:hover {
            background-color: #7f8c8d;
        }

    h2 {
        color: #34495e;
        font-family: 'Arial', sans-serif;
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    p {
        margin-top: 20px;
    }

    a {
        color: #3498db;
        text-decoration: none;
    }
</style>

<h2><b>Consommations</b></h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsommationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VolumeGasoil)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrixBon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRemplissage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kilometrage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Immatricule)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConsommationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VolumeGasoil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixBon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRemplissage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kilometrage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Immatricule)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ConsommationId }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.ConsommationId }, new { @class = "btn btn-default" })
            </td>
        </tr>
    }

</table>
