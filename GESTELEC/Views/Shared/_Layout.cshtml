<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/freelancer.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fonts/css/all.css" rel="stylesheet" type="text/css" />



    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Styles.css" rel="stylesheet" type="text/css" />


    <style>

        body {
            background-image: url('/Content/img/home.png'); /* Replace with your image path or use a placeholder image */
            background-size: cover;
            background-position: center;

            
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Nav</span>
                    <span class="fas fa-bars"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application GESTELEC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Ouvrier", "Index", "Ouvrier", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Pylone", "Index", "Pylone", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Work", "Index", "Work", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Vehicule", "Index", "Vehicule", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Repos", "Index", "Repos", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Paiement", "Index", "Paiement", new { area = "" }, new { @class = "navbar-link" })</li>
                    <li>@Html.ActionLink("Consommation", "Index", "Consommation", new { area = "" }, new { @class = "navbar-link" })</li>
                </ul>
            </div>
            <a href="/logout">
                Log out
            </a>
        </div>
    </div>


    <div class="container body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <script src="~/Content/js/jquery.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>

    
    <script src="~/Content/js/freelancer.js"></script>



</body>
</html>