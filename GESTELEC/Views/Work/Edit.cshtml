@model GESTELEC.Models.Work

@{
    ViewBag.Title = "Edit Work";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .create {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #2c3e50;
        color: #ffffff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        max-width: 400px; /* Adjust the width as per your preference */
        margin: 0 auto; /* Center the container horizontally */
    }

        .create h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .create .form-group {
            margin-bottom: 20px;
        }

        .create label {
            font-weight: bold;
        }

        .create input[type="text"],
        .create input[type="date"] {
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid #dddddd;
        }

        .create input[type="submit"] {
            padding: 10px 20px;
            background-color: #1abc9c;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .create input[type="submit"]:hover {
                background-color: #16a085;
            }
</style>
<div class="create">

    <h2>Edit Work</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Work</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.WorkId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.WorkId)
                    @Html.HiddenFor(model => model.WorkId)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.OuvrierCIN, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("OuvrierCIN", ViewBag.OuvrierCIN as SelectList, "-- Select Ouvrier --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OuvrierCIN, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PyloneNumero, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("PyloneNumero", ViewBag.PyloneNumero as SelectList, "-- Select Pylone --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PyloneNumero, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Date, new { @class = "form-control datepicker" })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    @Html.ActionLink("Cancel", "Details", new { id = Model.WorkId }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
    </div>